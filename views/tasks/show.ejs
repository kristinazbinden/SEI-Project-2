<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <% include ../partials/head.ejs %>
    </head>
    <body class="show">
        <div class="card w-50 text-center" style="width: 18rem;">
            <div class="card-body">
                <h2 class="card-title"><%=task.title; %></h2>
                <form action="/tasks" method="post">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <%=task.description; %>
                        </li>
                        <li class="list-group-item">
                            Notes: <%=task.notes; %>
                        </li>
                        <li class="list-group-item">
                            <h4>Task Completed:</h4>
                        <% if(task.completed === false){ %>
                            Not Completed
                        <% } else { %>
                            All Done!
                        <% } %>
                        </li>
                        <li class="list-group-item">
                            <a href="/tasks/<%=task.id; %>/edit" class="btn btn-light">Edit Task</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/tasks" class="btn btn-light">Back To List</a>
                        </li>
                    </ul>
                </form>

                    <form action="/tasks/<%=task.id; %>?_method=DELETE" method= "POST">
                        <input type="submit" class="btn btn-light" value="Remove Task"/>
                    </form>
            </div>
        </div>

            <% include ../partials/bootstrap.ejs %>
    </body>
</html>
